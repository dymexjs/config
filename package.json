{
    "name": "@dymexjs/config",
    "version": "0.0.1",
    "description": "Dymexjs Configuration system",
    "publishConfig": {
        "access": "public"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dymexjs/config.git"
    },
    "bugs": {
        "url": "https://github.com/dymexjs/config/issues"
    },
    "scripts": {
        "build": "npx tsc -p tsconfig.json",
        "lint": "eslint",
        "test": "globstar -- node --import tsx --test \"tests/**/*.test.ts\"",
        "test:coverage": "globstar -- node --experimental-test-coverage --test-reporter=spec --test-reporter-destination=stdout --test-reporter=lcov --test-reporter-destination=lcov.info --import tsx --test \"tests/**/*.test.ts\"",
        "test:watch": "globstar -- node --import tsx --test --watch \"tests/**/*.test.ts\"",
        "format": "prettier --config .prettierrc \"src/**/*.ts\" \"tests/**/*.ts\" --write",
        "prepare": "npm run format && npm test && npm run build",
        "preversion": "npm run lint && npm test",
        "version": "npm run format && git add -A .",
        "postversion": "git push && git push --tags"
    },
    "author": "Jo√£o Parreira",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.10.0",
        "@types/node": "^22.7.4",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-security": "^3.0.1",
        "globals": "^15.10.0",
        "globstar": "^1.0.0",
        "joi": "^17.13.3",
        "prettier": "3.3.3",
        "tsx": "^4.19.1",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.8.0"
    }
}
